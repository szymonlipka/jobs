- content_for :title do
  Home
%br
= simple_form_for(:sort_jobs, url: sort_jobs_path, method: 'get') do |f|
  = f.input :string, placeholder: 'Write here string of identificaiton characters of your jobs', label: false
  = f.button :submit, "Sort"
- if @string
  %h2 
    Here is your string - 
    %b= @string
%br
%center
  %h2 Create job
= simple_form_for(@job, url: jobs_path) do |f|
  = f.input :name, label: false, placeholder: 'Name'
  = f.input :id_char, label: false, placeholder: 'Identification character'
  = f.input :more_important_jobs, label: false, placeholder: 'Characters of more important jobs'
  = f.button :submit
%center
  %h2 All Jobs
%table.table
  %thead
    %tr
      %th Name
      %th Identification character
      %th More important jobs
  %tbody
    - @jobs.each do |job|
      %tr
        %td=job.name
        %td=job.id_char
        %td=job.more_important_jobs
%center= will_paginate @jobs, renderer: BootstrapPagination::Rails
